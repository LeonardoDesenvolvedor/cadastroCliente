@model IEnumerable<Cadastro.Models.Cliente>

@{
    ViewData["Title"] = "Lista Cliente";
}


    <title>Cliente</title>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar Cliente</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emai)
            </th>
            <th></th>
        </tr>
    </thead>
      <tbody>

          @foreach (var item in Model) {
            <tr>
              <td>
                @Html.DisplayFor(modelItem => item.Nome)
              </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emai)
            </td>
            <td>
                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.ClienteId">Editar</a> |
                <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.ClienteId">Detalhes</a> |
                <a class="btn btn-danger text-white btn-sm" asp-action="Delete" asp-route-id="@item.ClienteId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</html>
